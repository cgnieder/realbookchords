% double tensions
\cs_new_nopar:Npn \rbc_bb:n #1 { \rbc_read_double_tensions:nn { bb } { #1 } }
\cs_new_nopar:Npn \rbc_kk:n #1 { \rbc_read_double_tensions:nn { kk } { #1 } }
\cs_new_nopar:Npn \rbc_bk:n #1 { \rbc_read_double_tensions:nn { bk } { #1 } }
\cs_new_nopar:Npn \rbc_kb:n #1 { \rbc_read_double_tensions:nn { kb } { #1 } }

