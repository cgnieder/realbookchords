\prop_put:Nnn \l_rbc_double_tensions_numbers_prop { 13,9 }  { \AE{} }
\prop_put:Nnn \l_rbc_double_tensions_numbers_prop { 13,11 } { \`{E} }
\prop_put:Nnn \l_rbc_double_tensions_numbers_prop { 13,13 } { \'{E} }

\cs_new_nopar:Npn \rbc_read_double_tensions:nn #1#2
  {
    \bool_if:NT \l_rbc_tensions_brackets_bool { [ }
    \prop_get:NnNT \l_rbc_double_tensions_signs_prop { #1 } \l_tmpa_tl
      { \tl_use:N \l_tmpa_tl \tl_clear:N \l_tmpa_tl }
    \bool_if:NTF \l_rbc_fake_double_numbers_bool
      { \rbc_fake_double_numbers:w #2 \q_stop }
      {
        \prop_get:NnNTF \l_rbc_double_tensions_numbers_prop { #2 } \l_tmpb_tl
          { \tl_use:N \l_tmpb_tl \tl_clear:N \l_tmpb_tl }
          { \rbc_fake_double_numbers:w #2 \q_stop }
      }
    \bool_if:NT \l_rbc_tensions_brackets_bool { ] }
  }

\cs_new_nopar:Npn \rbc_dt:w
  { \peek_meaning:NTF [ { \rbc_dt_auxi:w } { \rbc_dt_auxii:n } }

\cs_new_nopar:Npn \rbc_dt_auxi:w [#1]#2
  { \rbc_read_double_tensions:nn { #1 } { #2 } }

\cs_new_nopar:Npn \rbc_dt_auxii:n #1
  { \rbc_read_double_tensions:nn { } { #1 } }

\cs_new_nopar:Npn \rbc_fake_double_numbers:w #1,#2 \q_stop
  {
    \box_move_up:nn { .0ex } { \hbox:n { \addfontfeatures { Scale=.9 } #1 } }
    \tex_kern:D -.5ex
    \box_move_down:nn { .85ex } { \hbox:n { \addfontfeatures { Scale=.9 } #2 } }
  }

% main command:
\cs_new_nopar:Npn \rbc_rbc:n #1
  {
    \group_begin:
      \cs_set_eq:NN \bb \rbc_bb:n
      \cs_set_eq:NN \bk \rbc_bk:n
      \cs_set_eq:NN \kb \rbc_kb:n
      \cs_set_eq:NN \kk \rbc_kk:n
      \cs_set_eq:NN \dt \rbc_dt:w
      \cs_set_eq:NN \b  \rbc_b:
      \cs_set_eq:NN \k  \rbc_k:
      \tl_set:Nn \l_tmpa_tl { #1 }
      \prop_map_inline:Nn \l_rbc_symbols_prop
        {
          \tl_set_rescan:Nnn \l_tmpb_tl { } { ##1 }
          \exp_args:NNo \tl_replace_all:Nnn \l_tmpa_tl { \l_tmpb_tl } { ##2 }
        }
      \NewRealBookChords \tl_use:N \l_tmpa_tl
    \group_end:
  }

% bass notes:
\cs_new_nopar:Npn \rbc_bass_note:n #1
  { / \box_move_down:nn { 1.25ex } { \hbox:n { \addfontfeatures { Scale=.75 } #1 } } }

\cs_new_nopar:Npn \rbc_is_bass:
  { \peek_meaning:NT \rbc_bass_note:n { \tex_kern:D -.35ex } }

% fake symbols:
\cs_new_nopar:Npn \rbc_fake_symbol:nn #1#2
  {
    \bool_if:nTF { \tl_if_blank_p:n { #2 } || \l_rbc_fake_symbols_bool }
      {
        \box_move_up:nn { 1.05ex }
          { \hbox:n { \addfontfeatures { Scale=.565 } #1 \tex_kern:D .1ex } }
      }
      { #2 }
  }

\cs_new_nopar:Npn \rbc_peek_mima:
  {
    \peek_meaning:NTF >
      { \tex_kern:D -.4ex }
      { \peek_meaning:NTF > { \tex_kern:D -.4ex } }
  }

