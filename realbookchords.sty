% user commands:
\NewDocumentCommand \rbc { som }
  {
    \group_begin:
      \IfBooleanT { #1 } { \bool_set_false:N \l_rbc_tensions_brackets_bool }
      \IfNoValueF { #2 } { \keys_set:nn { rbc } { #2 } }
      \bool_if:NTF \l_rbc_parse_chord_bool
        { \rbc_rbc:n { #3 } }
        { \NewRealBookChords #3 }
    \group_end:
  }

\NewDocumentCommand \dt { om }
  {
    \group_begin:
      \NewRealBookChords
      \rbc_read_double_tensions:nn { #1 } { #2 }
    \group_end:
  }

